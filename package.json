{
    "name": "@cadcamfun/nikcli",
    "version": "0.1.4-beta",
    "description": "Unified Claude Code Clone - Context-Aware AI Development Assistant",
    "main": "dist/cli/index.js",
    "bin": {
        "nikcli": "dist/cli/index.js"
    },
    "files": [
        "dist/**",
        "README.md"
    ],
    "publishConfig": {
        "access": "public",
        "tag": "beta"
    },
    "pkg": {
        "assets": [
            "dist/cli/**/*",
            "README.md"
        ],
        "targets": [
            "node18-macos-arm64",
            "node18-macos-x64",
            "node18-linux-x64"
        ],
        "outputPath": "build",
        "scripts": [
            "dist/cli/**/*.js"
        ]
    },
    "scripts": {
        "start": "ts-node --project tsconfig.cli.json src/cli/index.ts",
        "dev": "npm start",
        "build": "tsc --project tsconfig.cli.json",
        "prepublishOnly": "npm run build",
        "build:start": "npm run build && node dist/cli/index.js",
        "build:binary": "node build-single-binary.js",
        "test": "vitest",
        "test:run": "vitest run",
        "test:watch": "vitest --watch",
        "lint": "eslint src --ext .ts,.tsx"
    },
    "engines": {
        "node": ">=18"
    },
    "dependencies": {
        "@ai-sdk/anthropic": "^0.0.50",
        "@ai-sdk/google": "^0.0.54",
        "@ai-sdk/openai": "^0.0.66",
        "@chroma-core/default-embed": "^0.1.8",
        "@types/blessed": "^0.1.25",
        "@types/diff": "^7.0.2",
        "@types/inquirer": "^9.0.7",
        "ai": "^3.4.0",
        "blessed": "^0.1.81",
        "boxen": "^7.1.1",
        "chalk": "^5.3.0",
        "chokidar": "^4.0.3",
        "chromadb": "^3.0.11",
        "cli-progress": "^3.12.0",
        "commander": "^11.1.0",
        "conf": "^12.0.0",
        "diff": "^8.0.2",
        "globby": "^14.1.0",
        "gradient-string": "^2.0.2",
        "highlight.js": "^11.11.1",
        "ink": "^6.1.0",
        "ink-box": "^1.0.0",
        "ink-divider": "^4.1.1",
        "ink-select-input": "^6.2.0",
        "ink-spinner": "^5.0.0",
        "ink-table": "^3.1.0",
        "ink-text-input": "^6.0.0",
        "inquirer": "^9.2.12",
        "js-yaml": "^4.1.0",
        "keytar": "^7.9.0",
        "marked": "^12.0.2",
        "marked-terminal": "^7.3.0",
        "nanoid": "^5.0.4",
        "next": "14.0.4",
        "ollama-ai-provider": "^1.2.0",
        "ora": "^8.0.1",
        "prismjs": "^1.30.0",
        "react": "^19.1.1",
        "react-dom": "^19.1.1",
        "readline": "^1.3.0",
        "strip-ansi": "^7.1.0",
        "typescript": "^5.3.3",
        "vscode-jsonrpc": "^8.2.1",
        "zod": "^3.22.4",
        "zustand": "^4.4.7"
    },
    "devDependencies": {
        "@types/chalk": "^2.2.0",
        "@types/cli-progress": "^3.11.5",
        "@types/glob": "^8.1.0",
        "@types/gradient-string": "^1.1.6",
        "@types/js-yaml": "^4.0.9",
        "@types/marked-terminal": "^6.1.1",
        "@types/node": "^24.2.0",
        "@types/react": "^19.1.9",
        "@types/react-dom": "^19.1.7",
        "@typescript-eslint/eslint-plugin": "^6.18.0",
        "@typescript-eslint/parser": "^6.18.0",
        "@vercel/ncc": "^0.38.3",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "autoprefixer": "^10.4.21",
        "conf": "^12.0.0",
