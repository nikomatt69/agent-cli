        "eslint": "^8.56.0",
        "eslint-config-next": "14.0.4",
        "pkg": "^5.8.1",
        "postcss": "^8.5.6",
        "tailwindcss": "^4.1.11",
        "ts-node": "^10.9.1",
        "vitest": "^3.2.4"
    }
}